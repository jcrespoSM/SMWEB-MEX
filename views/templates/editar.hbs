<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            EDITAR DATOS DEL INVENTARIO
        </div>
        <div class="card-body">
            {{#each items}}
            <form action="/items/editar/{{this.iditems}}" method="POST">
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" name="nombre" id="nombre" value="{{this.nombre}}" class="form-control">
            </div>
            <div class="form-group">
                <label for="descripcion">Descripcion:</label>
                <input type="text" name="descripcion" id="descripcion" value="{{this.descripcion}}" class="form-control">
            </div>
            <div class="form-group">
                <label for="cantidad">Cantidad:</label>
                <input type="text" name="cantidad" id="cantidad" value="{{this.cantidad}}" class="form-control">
            </div>
            <div class="form-group">
                <br>
                <button type="submit" class="btn btn-sm btn-success">Save</button>
            </div>
            </form>
            {{/each}}
        </div>
    </div>
</div>